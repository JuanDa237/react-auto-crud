{
  "compilerOptions": {
    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Interop and JSX */
    "esModuleInterop": true,
    "jsx": "react-jsx",

    /* Language and module settings */
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",

    /* Emit */
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",

    /* Consistency and performance */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  /* Project boundaries */
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
